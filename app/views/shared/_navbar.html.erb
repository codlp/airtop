<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "newlogo.png", height: 40 %><b id="logo-name">AirTop</b>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
    <% @user = current_user %>
      <!-- Links when logged in -->
      <%= link_to "My reservations", user_reservations_path(@user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My rooftops", user_rooftops_path(@user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "#{@user.first_name}", user_path(@user), class: "navbar-wagon-item navbar-wagon-link", style: "font-weight: bold" %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
        <i class="dropdown-toggle" data-toggle="dropdown">

          <% if @user.photo.present? %>
          <div class="image">
            <%= cl_image_tag @user.photo, height: 30, width:30, crop: :fill%>
          </div>
          <% else %>
          <%= cl_image_tag "iconfinder_Contact_4074104", height: 30, crop: :fill%>
          <% end %>
        </i>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to user_path(@user) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to 'rooftops/new' do %>
            <i class="fas fa-plus-circle"></i> <%= t(".rent", default: "Rent a Rooftop") %>
            <% end %>
          </li>
<!--
            <li>
              <%#= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%#= t(".settings", default: "Settings") %>
              <%# end %>
            </li> -->
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <% else %>

      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>

    <!-- ON MOBILE - Dropdown list -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <% if user_signed_in? %>

          <!-- Links when logged in -->
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>

          <% else %>

          <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <% end %>

        </ul>
      </div>
    </div>
  </div>

