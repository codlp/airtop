<div class="container">
  <h1 class="text-center presentation-line"> All my reservations <%= link_to "Post a new rooftop", new_rooftop_path(@rooftop), class: "btn medium-btn", style: "background-color: #3945C3" %></h1>
  <div class="tabs">
    <a class="tab" href="/myrooftops">
      <h3>My rooftops</h3>
    </a>
    <a class="tab active" href="/rooftops_reservations">
      <h3>My rooftops'  Reservations</h3>
    </a>
  </div>
</div>
<div class="wrapper" style="background-color: white">
  <div class="container rooftops-list">

    <% @user.reservations.each do |reservation| %>
    <div class="message">
      <%= link_to rooftop_path(reservation) do %>
      <%= cl_image_tag reservation.rooftop.photo, width: 100, height: 100, crop: :fill, style: "border-radius: 5px;"%>
      <% end %>
      <div class="message-body">
        <p><strong><%= reservation.rooftop.name %></strong></p>
        <p><%= reservation.rooftop.description %></p>
        <p>Address: <%= reservation.rooftop.address %></p>
      </div>
      <% if reservation.status == "Pending" %>
      <%= link_to "Accept", accept_reservation_path(reservation), class: "btn medium-btn", id: "accept", style: "background-color: #1fdc89" %>
      <%= link_to "Decline", decline_reservation_path(reservation), class: "btn medium-btn", id: "decline", style: "background-color: #3945C3" %>
      <%= link_to "Message", new_reservation_message_path(reservation), class: "btn btn-outline-dark", id: "message"%>
      <% end %>

      <div class="message-status">
        <% if reservation.status == "Pending" %>
          <p class="status pending"><%= reservation.status %></p>
        <% elsif reservation.status == "Accepted" %>
          <p class="status accepted"><%= reservation.status %></p>
        <% else %>
          <p class="status declined"><%= reservation.status %></p>
        <% end %>

        <p class="price"><%= ((reservation.end_at - reservation.start_at) * reservation.rooftop.price_per_hour / 3600) %>â‚¬</p>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>
